doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
  body
    div.container
      h1 New customer
      form(action='/addcustomer', method='POST')
        div
          input(type="submit", value="Add a customer").btn.btn-secondary.mb-2
        div
          input(type="text", name="firstname" placeholder="First name").form-control.mb-2.col-form-label-lg
        div
          input(type="text", name="lastname" placeholder="Last name").form-control.mb-2.col-form-label-lg
        div
          input(type="text", name="email" placeholder="Email").form-control.mb-2.col-form-label-lg
        div
          input(type="text", name="phone" placeholder="Phone number").form-control.col-form-label-lg